<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="id.web.devin.mvvmkolam.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/actionDaftarSebagaiFragment"
            app:destination="@id/daftarSebagaiFragment" />
    </fragment>
    <fragment
        android:id="@+id/daftarSebagaiFragment"
        android:name="id.web.devin.mvvmkolam.view.DaftarSebagaiFragment"
        android:label="fragment_daftar_sebagai"
        tools:layout="@layout/fragment_daftar_sebagai" >
        <action
            android:id="@+id/actionLoginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/actionPilihKotaFragment"
            app:destination="@id/pilihKotaFragment"
            app:popUpTo="@id/pilihKotaFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/actionRegisBisnisFragment"
            app:destination="@id/regisBisnisFragment" />
    </fragment>
    <fragment
        android:id="@+id/regisPribadiFragment"
        android:name="id.web.devin.mvvmkolam.view.RegisPribadiFragment"
        android:label="fragment_regis_pribadi"
        tools:layout="@layout/fragment_regis_pribadi" >
        <action
            android:id="@+id/actionRPLoginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/actionRPDaftarSebagaiFragment"
            app:destination="@id/daftarSebagaiFragment"
            app:popUpTo="@id/daftarSebagaiFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="idkota"
            app:argType="integer"
            android:defaultValue='0' />
    </fragment>
    <fragment
        android:id="@+id/regisBisnisFragment"
        android:name="id.web.devin.mvvmkolam.view.RegisBisnisFragment"
        android:label="fragment_regis_bisnis"
        tools:layout="@layout/fragment_regis_bisnis" >
        <action
            android:id="@+id/actionRBLoginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/actionRBDaftarSebagaiFragment"
            app:destination="@id/daftarSebagaiFragment"
            app:popUpTo="@id/daftarSebagaiFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/pilihKotaFragment"
        android:name="id.web.devin.mvvmkolam.view.PilihKotaFragment"
        android:label="fragment_pilih_kota"
        tools:layout="@layout/fragment_pilih_kota" >
        <action
            android:id="@+id/actionRegisPFragment"
            app:destination="@id/regisPribadiFragment"
            app:popUpTo="@id/regisPribadiFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>